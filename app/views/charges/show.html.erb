<h1> Redireccionando a PayU ...</h1>
<form method="post" action="https://sandbox.checkout.payulatam.com/ppp-web-gateway-payu/">
<input name="merchantId"      type="text"  value="<%= ENV["PAYU_MERCHANT_ID"] %>"   >
<input name="accountId"       type="text"  value="<%= ENV["PAYU_ACCOUNT_ID"] %>" >
<input name="description"     type="text"  value="Pago SaaS IEConsultores - Nanducho"  >
<input name="referenceCode"   type="text"  value="<%= @charge.uid %>" >
<input name="amount"          type="text"  value="<%= @charge.amount %>"  >
<input name="tax"             type="text"  value="0"  >
<input name="taxReturnBase"   type="text"  value="0" >
<input name="currency"        type="text"  value="COP" >
<input name="signature"       type="text"  value="<%= @signature %>"  >
<input name="test"            type="text"  value="<%= 1 %>" >
<input name="buyerEmail"      type="text"  value="test@test.com" >
<input name="responseUrl"     type="text"  value="<%= ENV["LOCALHOSTNAME"] %>/payu/response" >
<input name="confirmationUrl" type="text"  value="<%= ENV["LOCALHOSTNAME"] %>/confirmation" >
<input name="Submit"          type="submit"  value="Send" >
</form>
